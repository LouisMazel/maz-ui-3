{
  "name": "@mazel/ui",
  "version": "3.0.0",
  "description": "A stand-alone components library for Vue.Js & Nuxt.Js",
  "author": "Louis Mazel <me@loicmazuel.com>",
  "main": "dist/cjs/index.js",
  "browser": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "lint": "npm run lint:js && npm run lint:style",
    "lint:js": "eslint --fix --ext .ts,.js,.vue .",
    "lint:style": "stylelint --ignore-path .gitignore --fix \"**/*.{vue,css,scss}\"",
    "clean": "rimraf dist",
    "pre-publish": "npm run build",
    "build": "npm run clean && cross-env NODE_ENV=production rollup -c build/rollup.config.js && npm run build:css",
    "build:css": "NODE_ENV=production npx tailwindcss -o dist/main.css",
    "build:cjs": "npm run clean && cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "npm run clean && cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,vue,json}": "eslint --fix",
    "*.{vue,css,scss,postcss,pcss}": "stylelint --custom-syntax postcss-html --fix",
    "*": "prettier -w -u"
  },
  "peerDependencies": {
    "vue-inline-svg": "^2.1.0",
    "vue": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "vue-inline-svg": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/preset-typescript": "^7.16.7",
    "@rollup/plugin-alias": "^3.1.9",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-replace": "^3.0.1",
    "@rollup/plugin-typescript": "^8.3.0",
    "@rollup/plugin-url": "^6.0.0",
    "@types/google.maps": "^3.47.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^16.11.12",
    "@types/rollup-plugin-peer-deps-external": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/eslint-config-typescript": "^10.0.0",
    "@vue/test-utils": "^2.0.0-0",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unicorn": "^40.0.0",
    "eslint-plugin-vue": "^8.3.0",
    "fs": "0.0.2",
    "lint-staged": "^12.1.7",
    "path": "^0.12.7",
    "postcss": "^8.4.5",
    "postcss-html": "^1.3.0",
    "postcss-import": "^14.0.2",
    "postcss-nested": "^5.0.5",
    "postcss-url": "^10.1.3",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.63.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "rollup-plugin-vue": "^6.0.0",
    "stylelint": "^14.2.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard": "^24.0.0",
    "tailwind-css-variables": "^3.0.1",
    "tailwindcss": "^2.1.2",
    "ts-jest": "^27.1.2",
    "ttypescript": "^1.5.13",
    "typescript": "^4.5.4",
    "v-click-outside": "^3.1.2",
    "vue": "^3.2.26",
    "vue-jest": "^5.0.0-0",
    "vue-loader": "^17.0.0",
    "vue-zoom-img": "^1.0.1",
    "vuedraggable": "^2.24.3"
  },
  "engines": {
    "node": ">= 6.0.0",
    "npm": ">= 3.0.0"
  },
  "bugs": {
    "url": "https://github.com/LouisMazel/maz-ui/issues"
  },
  "homepage": "https://louismazel.github.io/maz-ui",
  "keywords": [
    "vue",
    "components",
    "vue-component",
    "framework",
    "library",
    "ui"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LouisMazel/maz-ui.git"
  },
  "license": "MIT"
}
