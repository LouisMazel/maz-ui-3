{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "strict": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib/types",
    "lib": ["esnext", "DOM", "DOM.iterable", "scripthost"],
    "baseUrl": ".",
    "strictPropertyInitialization": false,
    "paths": {
      "~directives/*": ["directives/*"],
      "~/*": ["components/*"],
      "@/*": ["components/*"],
      "~utils/*": ["utils/*"]
    },
    "types": ["@types/node", "jest", "google.maps"]
  },
  "include": [
    "build/*",
    "types/*.ts",
    "components/**/*",
    "directive/**/*",
    "filters/**/*",
    "utils/**/*"
  ],
  "exclude": ["node_modules", "lib"]
}
